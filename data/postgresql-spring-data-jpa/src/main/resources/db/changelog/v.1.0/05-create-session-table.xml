<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="05-create-session-table-1" author="popipopka">
        <createTable tableName="session">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="movie_id" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="hall_id" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="start_time" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="real">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="session"/>
        </rollback>
    </changeSet>


    <changeSet id="05-create-session-table-2" author="popipopka">
        <addForeignKeyConstraint baseTableName="session" baseColumnNames="hall_id"
                                 referencedTableName="movie" referencedColumnNames="id"
                                 constraintName="fk_session_movie"/>

        <addForeignKeyConstraint baseTableName="session" baseColumnNames="hall_id"
                                 referencedTableName="hall" referencedColumnNames="id"
                                 constraintName="fk_session_hall"/>

        <rollback>
            <dropForeignKeyConstraint
                    baseTableName="session"
                    constraintName="fk_session_hall"/>

            <dropForeignKeyConstraint
                    baseTableName="movies"
                    constraintName="fk_session_movie"/>
        </rollback>
    </changeSet>

    <changeSet id="05-create-session-table-3" author="popipopka">
        <addUniqueConstraint tableName="session" columnNames="movie_id, hall_id, start_time"
                             constraintName="uk_session"/>

        <rollback>
            <dropUniqueConstraint tableName="session" constraintName="uk_session"/>
        </rollback>
    </changeSet>
</databaseChangeLog>